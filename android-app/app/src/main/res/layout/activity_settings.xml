<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_back"
                android:contentDescription="Back"
                app:tint="@color/on_surface" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Settings"
                android:textColor="@color/on_surface"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginStart="12dp" />
        </LinearLayout>

        <!-- Discovery Mode Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Discovery Mode"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <RadioGroup
            android:id="@+id/radioGroupMode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <RadioButton
                android:id="@+id/radioStrict"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸš« Strict - Never repeat any song"
                android:textColor="@color/on_surface"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/radioThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:text="ðŸ”¢ Threshold - Skip after N plays"
                android:textColor="@color/on_surface"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/radioTimeBased"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:padding="16dp"
                android:layout_marginBottom="8dp"
                android:text="â° Time-based - Allow after X days"
                android:textColor="@color/on_surface"
                android:buttonTint="@color/primary" />

            <RadioButton
                android:id="@+id/radioSmart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:padding="16dp"
                android:text="âœ¨ Smart - Learns your taste"
                android:textColor="@color/on_surface"
                android:buttonTint="@color/primary" />
        </RadioGroup>

        <!-- Threshold Setting -->
        <LinearLayout
            android:id="@+id/layoutThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_glass"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip Threshold"
                android:textColor="@color/on_surface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textThresholdValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Skip after hearing 2 times"
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <SeekBar
                android:id="@+id/seekBarThreshold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="9"
                android:progress="1"
                android:progressTint="@color/primary"
                android:thumbTint="@color/primary"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Time-based Setting -->
        <LinearLayout
            android:id="@+id/layoutTimeBased"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_glass"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginBottom="24dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Memory Fade"
                android:textColor="@color/on_surface"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textFadeValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Allow after 7 days"
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />

            <SeekBar
                android:id="@+id/seekBarFade"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="29"
                android:progress="6"
                android:progressTint="@color/primary"
                android:thumbTint="@color/primary"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <!-- Theme Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Appearance"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_glass"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŒ™ Dark Theme"
                android:textColor="@color/on_surface" />

            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                app:thumbTint="@color/primary"
                app:trackTint="@color/surface_elevated" />
        </LinearLayout>

        <!-- Data Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Data Management"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:id="@+id/btnLibrary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_glass"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽµ Manage Song Library"
                android:textColor="@color/on_surface"
                android:textStyle="bold" />
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whitelists &amp; Blacklists"
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp"
                android:layout_marginEnd="8dp" />

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_arrow_back"
                android:rotation="180"
                app:tint="@color/on_surface_tertiary" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnBackup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Backup Data"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/on_surface"
                android:backgroundTint="@color/surface_elevated"
                app:cornerRadius="12dp"
                android:layout_marginEnd="6dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnRestore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Restore Data"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="@color/on_surface"
                android:backgroundTint="@color/surface_elevated"
                app:cornerRadius="12dp"
                android:layout_marginStart="6dp"/>
        </LinearLayout>

        <!-- About Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/card_glass"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unloop v1.0.0"
                android:textColor="@color/on_surface"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never repeat. Always discover."
                android:textColor="@color/on_surface_secondary"
                android:textSize="12sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
