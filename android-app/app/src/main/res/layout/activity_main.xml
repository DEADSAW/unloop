<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Premium Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Gradient Logo -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âˆž"
                android:textSize="56sp"
                android:textColor="@color/primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unloop"
                android:textColor="@color/on_surface"
                android:textSize="32sp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Never repeat. Always discover."
                android:textColor="@color/on_surface_secondary"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Main Toggle Card with Glow -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glow"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/statusText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto-Skip Active"
                        android:textColor="@color/on_surface"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textModeDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Skipping songs you've heard before"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="12sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switchEnabled"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    app:thumbTint="@color/primary"
                    app:trackTint="@color/surface_elevated" />
            </LinearLayout>
        </FrameLayout>

        <!-- Stats Grid (2x2) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <!-- Songs Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_glass"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽµ"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textSongCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/stat_songs"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Songs Heard"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Loops Avoided Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_glass"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â­ï¸"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textLoopsAvoided"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/stat_loops"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loops Avoided"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Listen Time Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_glass"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â±ï¸"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textListenTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0h"
                        android:textColor="@color/stat_time"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Listening Time"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="12sp" />
                </LinearLayout>

                <!-- Artists Card -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/card_glass"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ¤"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textArtistCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/stat_artists"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Artists"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Permission Cards -->
        <LinearLayout
            android:id="@+id/llPermissionCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <!-- Accessibility Permission -->
            <LinearLayout
                android:id="@+id/cardAccessibilityPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:layout_marginBottom="12dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="âš¡"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Accessibility Service"
                        android:textColor="@color/on_surface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required for auto-skip"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrantAccessibility"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Enable"
                    android:textSize="12sp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="18dp" />
            </LinearLayout>

            <!-- Notification Permission -->
            <LinearLayout
                android:id="@+id/cardNotificationPermission"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_glass"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ””"
                    android:textSize="20sp"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Notification Access"
                        android:textColor="@color/on_surface"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Required for song detection"
                        android:textColor="@color/on_surface_secondary"
                        android:textSize="11sp" />
                </LinearLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGrantNotification"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Enable"
                    android:textSize="12sp"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="18dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Quick Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSkipHistory"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="â­ï¸ Skip Log"
                android:textSize="13sp"
                android:textColor="@color/on_surface"
                android:background="@drawable/card_glass"
                app:backgroundTint="@null"
                app:cornerRadius="14dp"
                android:layout_marginEnd="8dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnExportData"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="ðŸ“¤ Export"
                android:textSize="13sp"
                android:textColor="@color/on_surface"
                android:background="@drawable/card_glass"
                app:backgroundTint="@null"
                app:cornerRadius="14dp"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Clear Data Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClearData"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="ðŸ—‘ï¸ Clear Listening History"
            android:textSize="13sp"
            android:textColor="@color/error"
            android:background="@drawable/card_glass"
            app:backgroundTint="@null"
            app:cornerRadius="14dp"
            android:layout_marginBottom="24dp" />

        <!-- App Version -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="v1.0.0 â€¢ Made with â¤ï¸"
            android:textColor="@color/on_surface_tertiary"
            android:textSize="11sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

    </LinearLayout>
</ScrollView>
