{
  "name": "unloop-desktop",
  "version": "1.0.0",
  "description": "Music Discovery Desktop Application - Track, analyze, and enhance your listening experience",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder build --win --publish never",
    "build:dir": "electron-builder build --win --dir"
  },
  "keywords": ["music", "youtube", "spotify", "discovery", "analytics", "electron"],
  "author": "Sangam",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/unloop"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.unloop.desktop",
    "productName": "Unloop",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
